{
  "compilerOptions": {
    "module": "CommonJS",
    "sourceMap": true,
    "target": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "newLine": "lf",
    "pretty": true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
